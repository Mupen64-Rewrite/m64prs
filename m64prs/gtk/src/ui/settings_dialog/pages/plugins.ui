<?xml version="1.0" encoding="UTF-8"?>
<!--
I'd like to use Blueprint but it's missing this feature.
https://gitlab.gnome.org/jwestman/blueprint-compiler/-/issues/185
-->
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="M64PRS_SettingsPluginsPage" parent="GtkBox">
    <property name="margin-top">5</property>
    <property name="margin-bottom">5</property>
    <property name="margin-start">5</property>
    <property name="margin-end">5</property>
    <property name="spacing">5</property>
    <property name="orientation">vertical</property>

    <child>
      <object class="M64PRS_PluginSelect">
        <property name="plugins" bind-source="M64PRS_SettingsPluginPage" bind-property="graphics-plugins" bind-flags="sync-create" />
        <property name="label" translatable="yes" context="settings.plugins">Graphics plugin</property>
      </object>
    </child>

    <child>
      <object class="M64PRS_PluginSelect">
        <property name="plugins" bind-source="M64PRS_SettingsPluginPage" bind-property="audio-plugins" bind-flags="sync-create" />
        <property name="label" translatable="yes" context="settings.plugins">Audio plugin</property>
      </object>
    </child>

    <child>
      <object class="M64PRS_PluginSelect">
        <property name="plugins" bind-source="M64PRS_SettingsPluginPage" bind-property="input-plugins" bind-flags="sync-create" />
        <property name="label" translatable="yes" context="settings.plugins">Input plugin</property>
      </object>
    </child>

    <child>
      <object class="M64PRS_PluginSelect">
        <property name="plugins" bind-source="M64PRS_SettingsPluginPage" bind-property="rsp-plugins" bind-flags="sync-create" />
        <property name="label" translatable="yes" context="settings.plugins">RSP plugin</property>
      </object>
    </child>
  </template>
</interface>