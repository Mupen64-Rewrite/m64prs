<?xml version="1.0" encoding="UTF-8"?>
<!--
The menu is currently specified as an XML file due to limitations in
Blueprint (specifically, setting target types for menu items).

I have a PR open on Blueprint to add this feature, but for now,
we'll stick with XML. 
https://gitlab.gnome.org/jwestman/blueprint-compiler/-/merge_requests/224
-->
<interface>
  <requires lib="gtk" version="4.0"/>
  <menu id="root">
    <submenu>
      <attribute name="label" translatable="yes" context="main_menu">File</attribute>
      <section>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Open ROM</attribute>
          <attribute name="action">app.file.open_rom</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Close ROM</attribute>
          <attribute name="action">app.file.close_rom</attribute>
        </item>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Settings</attribute>
          <attribute name="action">app.file.settings</attribute>
        </item>
      </section>
    </submenu>
    <submenu>
      <attribute name="label" translatable="yes" context="main_menu">Emulator</attribute>
      <section>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Pause/Resume</attribute>
          <attribute name="action">app.emu.toggle_pause</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Frame Advance</attribute>
          <attribute name="action">app.emu.frame_advance</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Reset ROM</attribute>
          <attribute name="action">app.emu.reset_rom</attribute>
        </item>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Save State</attribute>
          <attribute name="action">app.emu.save_slot</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Load State</attribute>
          <attribute name="action">app.emu.load_slot</attribute>
        </item>
        <submenu>
          <attribute name="label" translatable="yes" context="main_menu">Current Slot</attribute>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">1</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">1</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">2</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">2</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">3</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">3</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">4</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">4</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">5</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">5</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">6</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">6</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">7</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">7</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">8</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">8</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes" context="main_menu">9</attribute>
            <attribute name="action">app.emu.set_save_slot</attribute>
            <attribute name="target" type="y">9</attribute>
          </item>
        </submenu>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Save State to...</attribute>
          <attribute name="action">app.emu.save_file</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes" context="main_menu">Load State from...</attribute>
          <attribute name="action">app.emu.load_file</attribute>
        </item>
      </section>
    </submenu>
    <submenu>
      <attribute name="label" translatable="yes" context="main_menu">Movie</attribute>
      <item>
        <attribute name="label" translatable="yes" context="main_menu">New Movie</attribute>
        <attribute name="action">app.vcr.new_movie</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="main_menu">Load Movie</attribute>
        <attribute name="action">app.vcr.load_movie</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="main_menu">Save Movie</attribute>
        <attribute name="action">app.vcr.save_movie</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="main_menu">Close Movie</attribute>
        <attribute name="action">app.vcr.close_movie</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="main_menu">Read-only Mode</attribute>
        <attribute name="action">app.vcr.toggle_read_only</attribute>
      </item>
    </submenu>
  </menu>
</interface>