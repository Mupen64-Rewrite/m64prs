using Gtk 4.0;

template $M64PRS_MainWindow: Gtk.ApplicationWindow {
  title: "m64prs";

  Stack {
    visible-child-name: bind template.current-page;

    StackPage {
      name: "rom-browser";
      child: Button rom_browser {
        hexpand: true;
        vexpand: true;
      };
    }
    StackPage {
      name: "game-view";
      child: $M64PRS_CompositorView compositor {
        hexpand: true;
        vexpand: true;
      };
    }
  }
}